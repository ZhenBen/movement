<div class="columns">
  <div class="column"></div>
  <div class="column">
    <div class="card centered">
      <header class="card-header-title">Register</header>
      <div class="card-content">
        <%= form_for User.new, url: {controller: "users", action: "create"} do |f| %>
        <div class="field">
          <%= f.label :username, "User Name:", class: "label" %>
          <%= f.text_field :username, class: "input" %>
        </div>
        <div class="field">
          <%= f.label :username, "Password:", class: "label" %>
          <%= f.password_field :password, class: "input" %>
        </div>
        <%= f.submit "Register", class: "button is-primary" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="column"></div>
</div>
