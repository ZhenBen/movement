<h1 class="title is-2">Popular Movements</h1>
<div class="columns">
  <% @popular.each do |page| %>
    <div class="column">
      <div class="card">
        <header class="card-header-title">
          <%= page.title %>
        </header>
        <div class="card-content">
          <div class="content">
            <%= page.description %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
